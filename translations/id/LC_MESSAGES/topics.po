#: ../../../../sources/1.9/docs/topics/python3.txt:120
msgid "Old name"
msgstr "Nama lama"

#: ../../../../sources/1.9/docs/topics/python3.txt:96
#: ../../../../sources/1.9/docs/topics/python3.txt:120
msgid "New name"
msgstr "Nama baru"

#: ../../../../sources/1.9/docs/topics/python3.txt:98
msgid "``smart_str``"
msgstr "``smart_str``"

